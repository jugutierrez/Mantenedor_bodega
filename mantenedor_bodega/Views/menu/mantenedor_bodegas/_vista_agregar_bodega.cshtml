

        
                         <div class="row" style="margin:2px;" ng-controller="TabsDemoCtrl" >
                             <div class="col-md-12">
                                 <h1 class="text-center">Nueva Bodega</h1>
                                 <hr>
                                 <uib-tabset active="active" justified="true">
                                     
                                     <uib-tab index="$index" ng-repeat="tab in tabs" heading="{{tab.title}}" disable="tab.disabled">
                                         {{tab.content}}
                                     {{$index}}
                                         {{tabs.length}}
                                         <a ng-click="atras($index)" ng-show="$index > 0">atras</a>
                                         <a ng-click="siguiente($index) ; active= ($index + 1) " ng-show="$index < tabs.length - 1">Siguiente</a>
                                     </uib-tab>
                                    
                                 </uib-tabset>
                                 <uib-tabset active="activeJustified" justified="true">
                                     <uib-tab index="0" heading="Justified">
                                     <div class="well">
                                         <div class="row">
                                         <div class="col-lg-12">
                                             <div class="btn-group btn-group-justified">
                                                 <label class="btn btn-primary" ng-model="radioModel" uib-btn-radio="'Left'" >Left</label>
                                                 <label class="btn  btn-primary" ng-model="radioModel" uib-btn-radio="'Middle'" >Middle</label>
                                                 <label class="btn  btn-primary" ng-model="radioModel" uib-btn-radio="'Right'" >Right</label>
                                             </div>
                                             </div></div></div></uib-tab>
                                     <uib-tab index="1" heading="SJ" disable="true">Short Labeled Justified content</uib-tab>
                                     <uib-tab index="2" heading="Long Justified" disable="true">Long Labeled Justified content</uib-tab>
                                     <uib-tab index="3" heading="Long Justified" disable="true">Long Labeled Justified content</uib-tab>
                                     <uib-tab index="4" heading="Long Justified" disable="true">Long Labeled Justified content</uib-tab>
                                 </uib-tabset>
                             </div>
</div>


